<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tif.tesyant.mov.SettingsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_below="@id/toolbar"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_dailyreminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Reminder Notification"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tv_notif"
        android:textColor="@android:color/black"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/tv_dailyreminder"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on/of daily reminder"
        android:layout_below="@id/tv_dailyreminder"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/upcoming_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Reminder Notification"
        android:layout_below="@id/tv_daily"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/upcoming_reminder"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/turnupcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on/off upcoming reminder"
        android:textSize="12sp"
        android:layout_below="@id/upcoming_reminder"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_below="@id/turnupcoming"
        android:textColor="@color/colorAccent"/>
    
    <TextView
        android:id="@+id/setting_locale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting Locale"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_below="@id/tv_settings"
        android:textColor="@android:color/black"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignBaseline="@+id/setting_locale"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change your phone localization"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/setting_locale"
        android:textSize="12sp"/>

</RelativeLayout>
